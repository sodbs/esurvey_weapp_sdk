/* pages/index/index.wxss */
#nav {
  text-align: center;
  background: #eeeeee;
  margin: 1em;
  padding: 1em;
  border-radius: 5px;
}

#add {
  margin: 1em;
}

.container {
  padding: 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 20px;
  text-align: center;
}

.title {
  font-size: 22px;
  font-weight: bold;
  color: #333;
}

/* Token获取区域 */
.token-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  background-color: #f8f8f8;
  padding: 15px;
  border-radius: 8px;
}

.token-btn {
  background-color: #007aff;
  color: white;
  font-size: 14px;
  padding: 8px 12px;
  flex: 1;
}

.token-btn[disabled] {
  background-color: #b0d0ff;
}

.token-status {
  display: flex;
  align-items: center;
  margin-left: 15px;
}

/* 蓝牙操作区域 */
.actions {
  display: flex;
  justify-content: space-between;
  gap: 10px;
  margin-bottom: 20px;
}

.scan-btn, .disconnect-btn {
  flex: 1;
  font-size: 14px;
  padding: 8px 12px;
}

.scan-btn {
  background-color: #007aff;
  color: white;
}

.scan-btn[disabled] {
  background-color: #b0d0ff;
}

.disconnect-btn {
  background-color: #ff3b30;
  color: white;
}

.disconnect-btn[disabled] {
  background-color: #ffb0ad;
}

/* 设备状态展示 */
.device-status, .location-info {
  background-color: #f8f8f8;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.status-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.status-indicator {
  display: flex;
  align-items: center;
}

.dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  margin-right: 5px;
}

.connected {
  background-color: #4cd964;
}

.disconnected {
  background-color: #ff3b30;
}

.status-text {
  font-size: 12px;
  color: #666;
}

.device-info-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.device-info-row {
  display: flex;
  align-items: center;
}

.label {
  min-width: 80px;
  color: #666;
  font-size: 14px;
}

.value {
  font-size: 14px;
  color: #333;
}

.warning {
  font-size: 12px;
  color: #ff3b30;
  margin-left: 10px;
}

/* 空状态展示 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
  background-color: #f8f8f8;
  border-radius: 8px;
  color: #999;
  font-size: 14px;
  text-align: center;
  padding: 20px;
}